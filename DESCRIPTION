Package: wdiEF
Type: Package
Title: Calculation of the Water Deficit Index (WDI) and the Evaporative
        Fraction (EF) on Rasters
Version: 1.0.4
Date: 2025-10-20
Authors@R: 
    person(
        given = "Gaelle",
        family = "Hamelin",
        role = c("aut", "cre"),
        email = "gaelle.hamelin@institut-agro.fr",
        comment = c(ORCID = "0009-0007-2148-7937")
